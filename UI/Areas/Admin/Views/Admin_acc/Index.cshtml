@model IEnumerable< Model.DTO.DTO_Ad.DTO_Account>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary" style="text-align:center">Danh sách tài khoản Admin</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        @*<th>RoleName</th>*@
                        <th>LastName</th>
                        <th>FirstName</th>
                        <th>Email</th>
                        <th>Password</th>
                        <th>Action</th>

                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        @*<th>RoleName</th>*@
                        <th>LastName</th>
                        <th>FirstName</th>
                        <th>Email</th>
                        <th>Password</th>
                        <th>Action</th>
                    </tr>
                </tfoot>
                <tbody>

                    @foreach (var item in Model)
                    {
                        <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                            <div class="modal-dialog" role="document">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h5 class="modal-title" id="exampleModalLabel">Bạn xác nhận xóa không?</h5>
                                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                            <span aria-hidden="true">&times;</span>
                                        </button>
                                    </div>
                                    <div class="modal-body">
                                        Bấm Xóa để xác nhận Xóa, Đóng để hủy
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Đóng</button>
                                        <a class="btn btn-primary " href=" @Url.Action("Delete", "Admin_acc", new { id = item.idUser })">Xóa</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <tr>

                            @*<td>
                    @Html.DisplayFor(modelItem => item.Role.RoleName)
                </td>*@
                            <td>
                                @Html.DisplayFor(modelItem => item.FirstName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.LastName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Email)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Password)
                            </td>
                            <td>
                                <a class="btn btn-success " href=" @Url.Action("Edit", "Admin_acc", new { id = item.idUser })">Chỉnh sửa</a>
                                <a class="btn btn-primary " href=" @Url.Action("Details", "Admin_acc", new { id = item.idUser })">Chi tiết</a>
                                <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#exampleModal">
                                    Xóa
                                </button>
                            </td>
                        </tr>
                    }

                </tbody> 
            </table>
        </div>
    </div>
</div>

<script>
    $('.btn_delete').bootstrap_confirm_delete({
        heading: 'Delete',
        message: 'Are you sure you want to delete this item?',
        data_type: null,
    });
</script>


