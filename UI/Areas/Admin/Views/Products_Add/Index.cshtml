@model IEnumerable<Model.DTO.DTO_Ad.DTO_Product>

@using Model.DTO.DTO_Ad;
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}


<h2>Sản Phẩm</h2>

<a class="nav-link collapsed" href="#" data-toggle="collapse" data-target="#collapseTwo1"
   aria-expanded="true" aria-controls="collapseTwo">
    <i class="fas fa-fw fa-cog"></i>
    <span>Tùy chọn sản phẩm</span>
</a>
<div id="collapseTwo1" class="collapse" aria-labelledby="headingTwo" data-parent="#accordionSidebar">
    <div class="bg-white py-2 collapse-inner rounded">
        <h6 class="collapse-header">Xem sản phẩm theo:</h6>
        <a class="collapse-item" href="~/Admin/Products_Add/Index">Tất cả sản phẩm</a><br />
        <a class="collapse-item" href="~/Admin/Products_Add/DongHo">Đồng hồ</a>
        <br>
        <a class="collapse-item" href="~/Admin/Products_Add/ThoiTrangNam">Thời trang nam</a>
        <br />
        <a class="collapse-item" href="~/Admin/Products_Add/ThoiTrangNu">Thời trang nữ</a>
        <br>
        <a class="collapse-item" href="~/Admin/Products_Add/MevaBe">Mẹ và bé</a>
        <br />
        <a class="collapse-item" href="~/Admin/Products_Add/ThietBiGiaDung">Thiết bị gia dụng</a>
        <br />
        <a class="collapse-item" href="~/Admin/Products_Add/MayAnhvaMayQuayPhim">Máy ảnh và Máy Quay Phim</a>
        <br />

        <a class="collapse-item" href="~/Admin/Products_Add/MayTinhvaLapTop">Máy tính và LapTop</a>
        <br />
        <a class="collapse-item" href="~/Admin/Products_Add/TheThaovaDuLich">Thể thao và du lịch</a>
        <br>
        <a class="collapse-item" href="~/Admin/Products_Add/SucKhoevaSacDep">Sức khỏe và sắc đẹp</a>
    </div>
</div>


<p style="font-size:larger ;text-align:center">
    @Html.ActionLink("Tạo sản phẩm mới", "Create")
</p>

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary" style="text-align:center">Danh sách sản phẩm</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Mã sản phẩm</th>
                        <th>Tên sản phẩm</th>
                        <th>Giá sản phẩm</th>
                        <th>Hình ảnh sản phẩm</th>
                        <th>Lựa chọn</th>


                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>Mã sản phẩm</th>
                        <th>Tên sản phẩm</th>
                        <th>Giá sản phẩm</th>
                        <th>Hình ảnh sản phẩm</th>
                        <th>Lựa chọn</th>

                    </tr>
                </tfoot>
                <tbody>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Id_SanPham)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Price)
                            </td>
                            <td>
                                <img src=" @Url.Content(item.Photo)" style="height:100px; width:100px;margin:10px" />
                            </td>

                            <td>
                                @Html.ActionLink("Chỉnh sửa", "Edit", new { id = item.Id_SanPham }) |
                                @Html.ActionLink("Chi tiết sản phẩm", "Details", new { id = item.Id_SanPham }) |
                                @Html.ActionLink("Xóa sản phẩm", "Delete", new { id = item.Id_SanPham })
                            </td>
                        </tr>
                    }

                </tbody>
            </table>
        </div>
    </div>
</div>